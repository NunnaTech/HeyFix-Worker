<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SoftlyWhite"
    android:orientation="vertical"
    android:padding="@dimen/dimenScreenPadding"
    tools:context=".ChangePassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar"
            android:textColor="@color/SoftlyBlack"
            android:textSize="36dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textColor="@color/Primary"
            android:textSize="36dp"
            android:textStyle="bold" />

        <View
            android:layout_width="160dp"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/Primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:text="@string/password_requests"
            android:textColor="@color/SoftlyGray"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/changePassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:hint="Contraseña actual"
            android:textColorHint="@color/SoftlyBlack"
            app:startIconDrawable="@drawable/ic_baseline_lock"
            app:startIconTint="@color/Primary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/SoftlyWhite"
                android:text="Ingresa tu contraseña"
                android:textColor="@color/SoftlyGray" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/confirmChangePassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:hint="Contraseña nueva"
            android:textColorHint="@color/SoftlyBlack"
            app:startIconDrawable="@drawable/ic_baseline_lock"
            app:startIconTint="@color/Primary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/SoftlyWhite"
                android:text="Ingresa tu nueva contraseña"
                android:textColor="@color/SoftlyGray" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnTakePhoto"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Cambiar Contraseña"
            android:textColor="#ffffff" />


    </LinearLayout>

</LinearLayout>