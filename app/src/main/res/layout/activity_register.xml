<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SoftlyWhite"
    android:orientation="vertical"
    android:padding="@dimen/dimenScreenPadding"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear nueva"
            android:textColor="@color/SoftlyBlack"
            android:textSize="36dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cuenta"
            android:textColor="@color/Primary"
            android:textSize="36dp"
            android:textStyle="bold" />

        <View
            android:layout_width="160dp"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/Primary"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Por favor, llena los siguientes campos:"
            android:textColor="@color/SoftlyGray"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_marginVertical="20dp"
            android:drawableLeft="@drawable/ic_google_icon"
            android:padding="10dp"
            android:text="REGISTRARTE CON GOOGLE"
            android:textColor="@color/SoftlyGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <View
                android:layout_width="167dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/SoftlyGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="o"
                android:textAlignment="center"
                android:textColor="@color/SoftlyGray" />

            <View
                android:layout_width="167dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/SoftlyGray" />


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/textField"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre completo"
            android:layout_marginVertical="15dp"
            android:textColorHint="@color/SoftlyBlack"
            app:startIconDrawable="@drawable/ic_baseline_person"
            app:startIconTint="@color/Primary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/SoftlyWhite"
                android:text="Ingresa tu nombre"
                android:textColor="@color/SoftlyGray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/textField3"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_marginVertical="15dp"
            android:layout_height="wrap_content"
            android:hint="Correo electrónico"
            android:textColorHint="@color/SoftlyBlack"
            app:startIconDrawable="@drawable/ic_baseline_email"
            app:startIconTint="@color/Primary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/SoftlyWhite"
                android:text="name@example.com"
                android:textColor="@color/SoftlyGray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/textField2"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Crea una contraseña"
            android:layout_marginVertical="15dp"
            android:textColorHint="@color/SoftlyBlack"
            app:startIconDrawable="@drawable/ic_baseline_lock"
            app:startIconTint="@color/Primary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/SoftlyWhite"
                android:text="Ingresa tu contraseña"
                android:textColor="@color/SoftlyGray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:text="REGISTRARTE"
            android:textColor="#ffffff" />


    </LinearLayout>


</LinearLayout>